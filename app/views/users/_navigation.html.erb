<div class="admin-navigation">
	<div class="btn-group">
		<% unless user_signed_in? %>
			<%= link_to new_user_registration_path do %>
				<i class="fa fa-edit fa-fw" aria-hidden="true"></i> Registrarse
			<% end %>
		<% else %>
			<a href="#panel_navigation" class="visible-xs" data-util="class" data-toggle="in">
				<i class="fa fa-bars fa-fw" aria-hidden="true"></i>
			</a>
		<% end %>
	</div>
	<div class="btn-group">
		<% if user_signed_in? %>
			<%= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, aria_haspopup: 'true', aria_expanded: false do -%>
				<%= current_user.name %> &nbsp; <i class="fa fa-user" aria-hidden="true"></i>
			<% end %>
			<ul class="dropdown-menu" style="left:auto;right:0;">
				<li>
					<%= link_to root_path do %>
						<i class="fa fa-home fa-fw" aria-hidden="true"></i> Home
					<% end %>
				</li>
				<li>
					<%= link_to edit_user_registration_path do %>
						<i class="fa fa-edit fa-fw" aria-hidden="true"></i> Editar
					<% end %>
				</li>
		    <li>
					<%= link_to destroy_user_session_path, method: :delete do %>
						<i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Salir
					<% end %>
				</li>
			</ul>
		<% else %>
			<%= link_to new_user_session_path do %>
				<i class="fa fa-sign-in" aria-hidden="true"></i> Ingresar
			<% end %>
		<% end %>
	</div>
</div>

<% content_for :panel_navigation do %>
	<ul class="nav nav-pills nav-stacked">
	  <li role="presentation" class="<%= panel_nav_class(profile_path) %>">
	  	<%= link_to profile_path do %>
	  		<i class="fa fa-user fa-fw" aria-hidden="true"></i> Perfil
	  	<% end %>
	  </li>
	  <li role="presentation" class="<%= panel_nav_class(edit_user_registration_path) %>">
	  	<%= link_to edit_user_registration_path do %>
	  		<i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Editar
	  	<% end %>
	  </li>
	  <li role="presentation" class="<%= panel_nav_class(:addresses) %>">
	  	<%= link_to addresses_path do %>
	  		<i class="fa fa-map-marker fa-fw" aria-hidden="true"></i> Direcciones de envío
	  	<% end %>
	  </li>
	  <li role="presentation" class="<%= panel_nav_class(:payments) %>">
	  	<%= link_to payments_path do %>
	  		<i class="fa fa-money fa-fw" aria-hidden="true"></i> Pagos
	  	<% end %>
	  </li>
	  <li role="presentation" class="<%= panel_nav_class(:contacts) %>">
	  	<%= link_to new_contact_path do %>
	  		<i class="fa fa-question-circle fa-fw" aria-hidden="true"></i> Soporte
	  	<% end %>
	  </li>
	  <li role="presentation">
	  	<%= link_to destroy_user_session_path, class: 'link-danger', method: :delete do %>
	  		<i class="fa fa-sign-out fa-fw" aria-hidden="true"></i> Cerrar sesión
	  	<% end %>
	  </li>
	</ul>
<% end %>
/*  Social Media Bottom */
.socialmedia-bottom{
    width: $w-full;
    max-width: $w-aria;
    margin: 0 auto;

    & > div{
        width: percentage(500 / 1500);
        float: left;

        a{
            display: block;
            padding: 50px 10px;
            text-align: center;
            font: 0/0 a;

            &:hover{
                opacity: 0.8;
            }
        }
    }

    .facebook a{
        background: url('<%= asset_path 'facebook_bottom.png' %>') no-repeat center center #3b5997;
        background-size: 70px 66px;
    }
    .twitter a{
        background: url('<%= asset_path 'twitter_bottom.png' %>') no-repeat center center #3fccfd;
        background-size: 70px 66px;
    }
    .youtube a{
        background: url('<%= asset_path 'youtube_bottom.png' %>') no-repeat center center #ee1c1b;
        background-size: 70px 66px;
    }
    
    @include clear;
}

@media only screen and (max-width: $bp550) {
    .socialmedia-bottom{
        .facebook a,
        .twitter a,
        .youtube a{
            background-size: 35px 33px;
            padding: 30px 10px;
        }
    }
}



/*  Footer */

footer{
    background: $c-gris-footer;
    padding: 30px 30px 50px;
    
    .content-footer{
        width: $w-full;
        max-width: $w-aria;
        margin: $ma-center;
        
        & > div{
            width:  percentage(350px/1500px);
            float: left;
            padding: 0 20px;
            
            h2{
                color: $c-blanco;
                font-family: Aria-Demi;
                font-size:20px;
                text-transform: none;
                margin-bottom: 0;
                padding-bottom: 25px;
            }
            p{
                font-family: Roboto;
                color: $c-blanco;
                font-size: $f-size;
                font-weight: 300;
                display: block;
                margin-bottom: 15px;
            }
        }
        
        .tags,
        .newsletter{
            width:  percentage(400px/1500px);
        }
        
        .secciones{
            padding: 0 20px 0 0;
            
            ul li a{
                font-size:  $f-size;
                color: $c-blanco;
                font-family: Roboto;
                display: block;
                margin-bottom: 10px;
                
                &:hover{
                    color: $c-verde-link;
                }
            }
        }
        
        .tags{
            ul li{
                display: inline-block;
                vertical-align: top;
                margin: 0 6px 10px 0;
                
                a{
                    padding: 10px;
                    font-family: Roboto;
                    display: block;
                    color: $c-negro;
                    background: $c-gris-menu-hover;
                    font-size: $f-size-s;
                    @include transicion-rapida;
                    
                    &:hover{
                        background: $c-verde-link;
                    }
                }
            }
        }
        
        .newsletter{
            
            .newsletter-input{
                input[type="email"]{
                    height: 40px;
                    width: percentage(260px/400px);
                    float: left;
                    background: $c-blanco;
                    border: 0;
                    padding: 0 15px;
                    font-size: $f-size-l;
                    
                    &::-webkit-input-placeholder { font-size: $f-size-s; } /* WebKit */
                    &:-moz-placeholder { font-size: $f-size-s; } /* Firefox 18- */
                    &::-moz-placeholder { font-size: $f-size-s;} /* Firefox 19+ */
                    &:-ms-input-placeholder { font-size: $f-size-s;} /* IE 10+ */
                }
                input[type="submit"]{
                    height: 40px;
                    width: percentage(140px/400px);
                    float: left;
                    background: $c-negro;
                    border: 0;
                    color: $c-blanco;
                    font-size: $f-size-l;
                    cursor: pointer;
                    @include transicion-rapida;
                    
                    &:hover{
                        background: $c-verde-link;
                        color: $c-negro;
                    }
                }
                &:after{
                    display: block;
                    clear: both;
                    content: '';
                }
            }
            
            .tarjetas{
                width: $w-full;
                margin-top: 45px;
                span{
                    display: inline-block;
                    vertical-align: top;
                    margin: 0 6px 10px 0;
                    border: 1px solid $c-gris-menu-hover;
                }
            }
        }
        
        .contacto{
            padding: 0 0 0 15px;
            
            .telefonos{
                margin-bottom: 10px;
                .icono{
                    display: inline-block;
                    vertical-align: middle;
                    width: 40px;
                    height: 35px;
                    @include iconsprite;
                    background-position: -50px -535px;                    
                }
                .numeros{
                    display: inline-block;
                    vertical-align:middle;
                    color: $c-blanco;
                    line-height: 1.5;
                    font-family: Roboto;
                    font-size: $f-size;
                    font-weight: 300;
                }
            }
            .email{
                margin-bottom: 10px;
                .icono{
                    display: inline-block;
                    vertical-align: middle;
                    width: 40px;
                    height: 35px;
                    @include iconsprite;
                    background-position: 0 -535px;
                }
                a{
                    display: inline-block;
                    vertical-align: middle;
                }
            }
        }
        &:after{
            display: block;
            clear: both;
            content: '';
        }
    }
    &:after{
        display: block;
        clear: both;
        content: '';
    }
}

.copyright{
    background: $c-gris-oscuro;
    padding: 25px;
    width: $w-full;
    color: $c-blanco;
    font-family: Roboto;
     font-weight: 300;
    font-size: $f-size-l;
    
    .content-copy{
        width: $w-full;
        max-width: $w-aria;
        margin: $ma-center;
        text-align: left;
        
        .copy-aria{
            display: inline-block;
            vertical-align: middle;
            margin-right: 20px;
        }
        .powered{
            display: inline-block;
            vertical-align: middle;
            
            span, a{
                display: inline-block;
                vertical-align: middle;
            }
        }
        
        
         .socialmedia{
                display: inline-block;
                float: right;
                margin-top: 6px;
                ul{
                    padding-left: 25px;
                    @include transicion-media;
                    li{
                        display: inline-block;
                        vertical-align: middle;
                        height: 25px;
                        width: 25px;
                        @include transicion-media;

                        a{
                            display: block;
                            font: 0/0 a;
                            @include iconsprite;
                            width: 100%;
                            height: 100%;
                        }
                        &.facebook a{
                            background-position: 0px -115px;
                            &:hover{
                                background-position: -50px -115px;
                            }
                        }
                        &.twitter a{
                            background-position: 0px -52px;
                            &:hover{
                                background-position: -50px -52px;
                            }
                        }
                        &.google a{
                            background-position: 0px -145px;
                            &:hover{
                                background-position: -50px -145px;
                            }
                        }
                        &.linkedin a{
                            background-position: 0px -84px;
                            &:hover{
                                background-position: -50px -84px;
                            }
                        }
                        &.youtube a{
                            background-position: 0px -205px;
                            &:hover{
                                background-position: -50px -205px;
                            }
                        }
                        
                        &:last-child{
                            margin-right: 0;
                        }

                    }
                    @media only screen and (max-width: $bp1250) {
                        &{
                            padding-left: 10px;
                        }   
                    }
                }
            }
        
    }
}




@media only screen and (max-width: 1150px) {
     footer .content-footer{
        .newsletter{
            .newsletter-input{
                 input[type="email"]{
                    width: percentage(240px/400px);
                }
                input[type="submit"]{
                    width: percentage(160px/400px);
                 }
            }
        }
    }
}

@media only screen and (max-width: $bp1050) {
    footer{    
        .content-footer{
            .secciones{
                width:  percentage(250px/1500px);
            }
            .tags{
                width:  percentage(350px/1500px);
            }
            .newsletter{
                width:  percentage(500px/1500px);
            }

            .contacto{
                width:  percentage(400px/1500px);
            }
        }
    }
}


@media only screen and (max-width: $bp970) {

    footer{    
        .content-footer{
            & > div,
            .secciones,
            .tags,
            .newsletter,
            .contacto{
                display: inline-block;
                vertical-align: top;
                margin-right: -4px;
                width:  percentage(750px/1500px);
                float: inherit;
                margin-bottom: 35px;
            }
            .newsletter{
                padding-left: 0;
                margin-bottom: 10px;
            }
            .contacto{
                margin-bottom: 10px;
            }
        }
    }
        
}
@media only screen and (max-width: $bp760) {

    footer{    
        padding: 20px;
        .content-footer{
            & > div,
            .secciones,
            .tags,
            .newsletter,
            .contacto{
                display: block;
                vertical-align: top;
                margin-right: 0;
                width:  percentage(1500px/1500px);
                float: inherit;
                margin-bottom: 30px;
                padding-left: 0;
                padding-right: 0;
            }
        }
    }
    .copyright  .content-copy{
        text-align: center;
        .copy-aria{
            display: inline-block;
            vertical-align: middle;
            margin-right: 0;
            width: $w-full;
        }
        .powered{
            display: inline-block;
            vertical-align: middle;
            width: $w-full;
            padding: 20px 0;
        }
        .socialmedia{
            display: inline-block;
            vertical-align: middle;
            width: $w-full;
            float: none;
            margin-top:0;
        }
    }
        
}


    
    
    
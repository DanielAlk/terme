     .checkout{
        .content .content-info {
            section{
                .col-left{
                    .column-left,.column-right{
                        h2{
                                font-family: $f-aria-book;
                                font-weight: 300;
                                font-size: 16px;
                                text-transform: uppercase;
                                line-height: 1;
                                color: $c-gris-oscuro;
                                 padding: 15px 0px;

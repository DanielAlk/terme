    .content .content-info {
        section{
            @include clear;
            .col-left{
                 float: left;
                width: percentage(1000px / 1500px);
                .column-left,.column-right{
                    h2{
                            font-family: $f-aria-book;
                            font-weight: 300;
                            font-size: 16px;
                            text-transform: uppercase;
                            line-height: 1;
                            color: $c-gris-oscuro;
                             padding: 15px 30px;
                            span{
                                font-family: $f-aria-demi;
                                font-size: 30px;
                            }
                    }
                }
                
                .column-left{
                    .btn{
                        
                        input[type=submit]{
                            font-size: 20px;
                        }
                    }
                }
                .column-right{                    
                    .action{
                        
                        .passw{
                        
                            p{
                                font-size: $f-size-xxs;
                            }
                            a{
                                font-size: $f-size-s;
                            }
                        }
                    }
                    
                    .btn{
                        input[type=submit]{
                            font-size: 20px;
                        }
                    }
                }
            
            }
            .col-right{
                .action{
                    button{
                        font-size: 18px;
                    }
                }
            }
        }
        
        section.mercadopago{
            margin-bottom: 90px;
            .confir-compra{
                p{
                    width: 68%;
                }
            }
        }
    }
}
}

@media only screen and (max-width: $bp970) {
    .checkout {
        .content .content-info {
            section{
                .col-left{
                    width: $w-full;
                    
                     .column-left{
                        .btn{

                            input[type=submit]{
                                font-size: 20px;
                            }
                        }
                    }
                      .column-right{       
                            .btn{
                                input[type=submit]{
                                    font-size: 20px;
                                }
                            }
                    }
                }
                .col-right{
                    width: $w-full;
                    margin-top: 60px;
                }
            }
            
            section.mercadopago{
                .confir-compra{
                    p{
                        width: $w-full;
                        margin-bottom: 20px;
                    }
                    a{
                        float: none;
                        margin: 0 auto;
                        clear: left;
                        max-width: 300px;
                    }
                }
            }
        }
    }
}

@media only screen and (max-width: $bp760)  {
    .checkout{
        .content .content-info {
            section{
                .col-left{
                    .column-left{
                        width: $w-full;
                        margin-bottom: 40px;
                    }
                    .column-right{
                        border-top: 1px solid  $c-gris-claro;
                        width: $w-full;
                        padding-top: 20px;
                    }
                }
            }
        }
    }
}


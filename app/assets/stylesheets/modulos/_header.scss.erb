
/*  header */
header{
    width: $w-full;
    padding: $pa-laterales-big;
    position: absolute;
    top: 0;
    z-index: 10;
    
    .content-header{
        width: $w-full;
        max-width: $w-aria;
        background: white;
        margin: $ma-center;
        
        .info-top{
            width: $w-full;
            height: 40px;
            background: $c-gris-oscuro;
            
            .socialmedia{
                display: inline-block;
                margin-top: 6px;
                
                ul{
                    padding-left: 25px;
                    @include transicion-media;
                    li{
                        display: inline-block;
                        vertical-align: middle;
                        height: 25px;
                        width: 25px;
                        margin-right: 15px;
                        @include transicion-media;

                        a{
                            display: block;
                            font: 0/0 a;
                            @include iconsprite;
                            width: 100%;
                            height: 100%;
                        }
                        &.facebook a{
                            background-position: 0px -115px;
                            &:hover{
                                background-position: -50px -115px;
                            }
                        }
                        &.twitter a{
                            background-position: 0px -52px;
                            &:hover{
                                background-position: -50px -52px;
                            }
                        }
                        &.google a{
                            background-position: 0px -145px;
                            &:hover{
                                background-position: -50px -145px;
                            }
                        }
                        &.linkedin a{
                            background-position: 0px -84px;
                            &:hover{
                                background-position: -50px -84px;
                            }
                        }
                        &.youtube a{
                            background-position: 0px -205px;
                            &:hover{
                                background-position: -50px -205px;
                            }
                        }
                        
                        &:last-child{
                            margin-right: 0;
                        }
                        @media only screen and (max-width: $bp1250) {
                            &{
                                margin-right: 6px;
                            }   
                        }
                    }
                    @media only screen and (max-width: $bp1250) {
                        &{
                            padding-left: 10px;
                        }   
                    }
                }
            }
            .links-top{
                display: inline-block;
                
                ul{
                    padding-left: 40px;
                    @include transicion-media;
                    
                    li{
                        display: inline-block;
                        vertical-align: middle;
                         color: $c-blanco;
                        font-size: $f-size-xs;
                        margin-right: 15px;
                        @include transicion-media;
                        
                        a{
                            color:$c-blanco;
                            text-decoration: none;
                            font-size: $f-size-xs;
                            
                            &:hover{
                                color: $c-verde-link;
                            }
                        }
                        
                        span{
                             display: inline-block;
                            vertical-align: middle;
                            font: 0/0 a;
                            @include iconsprite;
                            width: 25px;
                            height: 25px;
                            margin-right: 10px;
                        }
                        &.email a span{
                            background-position: 0px -236px;
                        }
                         &.email a:hover span{
                            background-position: -50px -236px;
                        }
                        &.whatsapp span{
                            background-position: 3px -176px;
                            margin-right: 5px;
                            &:hover{
                                background-position: -47px -176px;
                            }
                        }
                        
                        &:last-child{
                            margin-right: 0;
                        }
                        @media only screen and (max-width: $bp1250) {
                            &{
                                margin-right: 6px;
                            }   
                        }
                    }
                    @media only screen and (max-width: $bp1250) {
                        &{
                            padding-left: 16px;
                        }   
                    }
                }
            }      
            .top-right{
                float: right;
                text-align: right;
                
                .usuarios, .menu-top, .buscador{
                    display: inline-block;
                    vertical-align: top;
                    margin-left: -4px;
                }
                .usuarios{
                    a{
                        padding: 13px 20px 12px;
                        background: $c-gris-oscuro2;
                        text-align: center;
                        color: $c-blanco;
                        text-transform: uppercase;
                        float: left;
                        display: block;
                        font-size: $f-size-l;
                        font-family: $f-aria-medium;
                        font-weight: 500;
                        letter-spacing: 0.07em;
                       
                         &.registro{
                            background: $c-gris-menu;
                        }
                        
                        &:hover{
                            background: $c-verde-link;
                        }
                    }
                     @media only screen and (max-width: $bp1250) {
                         a{
                             padding: 14px 8px 13px;
                             font-size: $f-size-s;;
                         }
                    }
                }
                
                .menu-top{
                    position: relative;
                    span.icon{
                        padding: 20px 24px;
                        @include iconsprite;
                        background-position: 13px -302px;
                        font: 0/0 a;
                        display: block;
                        width: 22px;
                        height: 17px;
                        cursor: pointer;
                        
                        &:hover{
                            background-position: -37px -302px;
                        }
                        @media only screen and (max-width: $bp1250) {
                          &{
                                padding: 20px 18px;
                                background-position: 7px -302px;
                              
                              &:hover{
                                    background-position: -43px -302px;
                                }
                            }
                        }
                    }
                        
                    ul.topmenu{
                        position: absolute;
                        display: none;
                        width: 200px;
                        left: 0;
                        z-index: 2;
                        
                        li{
                            display: block;
                            background: $c-gris-menu;
                            border-bottom: 1px dotted $c-gris-oscuro;
                            text-align: left;
                            
                            &:last-child{
                                border-bottom: 0;
                            }
                            
                            &:before{
                                display: inline-block;
                                content: url('<%= asset_path 'icon_list.png' %>');
                                width: 6px;
                                height: 6px;
                                float: left;
                                margin-top: 6px;
                                margin-left: 7px;
                            }
                            
                            a{
                                display: block;
                                width: 100%;
                                padding: 10px 7px 10px 20px;
                                font-size: $f-size-s;
                                text-transform: uppercase;
                                color: $c-blanco;
                                
                                &:hover{
                                    background: $c-verde-link;
                                }
                            }
                        }
                    }
                    &.active{
                        span.icon{
                            background-position: -37px -302px;
                            
                             @media only screen and (max-width: $bp1250) {
                                 &{
                                     background-position: -43px -302px;
                                 }
                            }
                        }
                    }
                }
                
                .buscador{
                    .busca_form{
                        position: relative;
                        input[type="search"]{
                            height: 40px;
                            width: 170px;
                            border: 0;
                            background: #d5d5d5;
                            padding: 0 20px 0 10px;
                            float: left;
                            text-transform: uppercase;
                            font-family: $f-aria-book;
                            font-weight: 300;
                            font-size: $f-size-xs;
                            color: $c-negro;
                            letter-spacing: 0.03em;
                            @include transicion-media;

                            &:focus{
                                outline: none;
                            }
                            &::-webkit-input-placeholder { color: $c-negro; } /* WebKit */
                            &:-moz-placeholder { color: $c-negro; } /* Firefox 18- */
                            &::-moz-placeholder { color:  $c-negro; } /* Firefox 19+ */
                            &:-ms-input-placeholder { color: $c-negro; } /* IE 10+ */

                            @media only screen and (max-width: $bp1250) {
                                &{
                                    width: 140px;
                                }   
                            }
                        }
                         input[type="submit"]{
                            float: left;
                            height: 40px;
                             width: 35px;
                             background: transparent;
                             border: 0;
                             font: 0/0 a;
                             cursor: pointer;
                             @include iconsprite;
                            background-position: 5px -259px;
                             outline: none;

                             &:hover{
                                 background-position: -45px -259px;
                             }
                        }

                        span.borrar{
                            display: block;
                            height: 15px;
                            width: 15px;
                            float: left;
                            top: 12px;
                            right: 38px;
                            position: absolute;
                            @include iconsprite;
                            background-position: 0 -348px;
                            cursor: pointer;
                        }
                    }    
                    @media only screen and (min-width: $bp479 + 1) {
                        .busca_form{
                            display: block !important;
                        }
                    }
                }
            }
            
        }
        .info-head{
            padding: 15px 50px 15px 30px;
            position: relative;
            @include transicion-media;
            
            .logo{
                width: 10%;
                max-width: 115px;
                min-width: 80px;
                float: left;
                @include transicion-media;
                
                a{
                    display: block;
                    width: $w-full;
                    
                    img{
                        width: $w-full;
                    }
                }
                @media only screen and (max-width: $bp1250) {
                    &{
                        width: 9%;
                    }   
                }
            }
            /* menu principal */
            .navegacion{
                float: right;
                width: 90%;
                text-align: right;
                margin-top: 2.3%;
                @include transicion-media;
                
                nav{
                    display: inline-block;
                    vertical-align: middle;
                    padding-right: 20px;
                    @include transicion-media;
                    
                    .level0{
                        li{
                            display: inline-block;
                            vertical-align: middle;
                            position: relative;
                            margin-left: -4px;
                            
                            a{
                                padding: 10px 20px;
                                text-align: center;
                                text-transform: uppercase;
                                display: block;
                                font-family: $f-aria-book;
                                font-weight: 300;
                                color:  $c-gris-menu;
                                font-size: $f-size-xl;
                                letter-spacing: 0.04em;
                                @include transicion-rapida;
                                
                                &:hover{
                                    color: $c-verde-link;
                                }
                            }
                            
                            &.li_submenu{
                                & > a:after{
                                    width: 0;
                                    height: 0;
                                    border-style: solid;
                                    border-width: 6px 4px 0 4px;
                                    border-color: $c-gris-menu transparent transparent transparent;
                                    content: ' ';
                                    display: inline-block;
                                    vertical-align: middle;
                                    margin-left: 7px;
                                    line-height: 1;
                                    margin-top: -4px;
                                }
                            }
                        }
                        
                        @media only screen and (min-width: $bp970 + 1) {
                            &{
                                display: block !important;
                            }
                        }
                    }
                    
                    .level1 li.li_submenu a:after,
                    .level2 li.li_submenu a:after{
                        display: none;
                    }
                    
                    @media only screen and (max-width: $bp1400) {
                        .level0 li a{
                            padding: 10px;
                        }
                    }
                    @media only screen and (max-width: $bp1250) {
                        .level0 li a{
                            font-size: $f-size;
                        }
                    }
                    @media only screen and (max-width: $bp1050) {
                        .level0 li a{
                            font-size: $f-size-xs;
                             padding: 10px;
                        }
                    }
                    
                    .level1{
                        position: absolute;
                        display: none;
                        top: $w-full;
                        width: 250px;
                        background: $c-verde-link;
                        z-index: 2;
                        
                        li{
                            display: block;
                            width: $w-full;
                            margin-left: 0px;
                            
                            a{
                                padding: 15px 20px;
                                text-align: left;
                                display: block;
                                color: $c-blanco;
                                font-size: $f-size-s;
                                font-weight: 500;
                                
                                &:hover{
                                    color: $c-blanco;
                                    background: $c-gris-menu;
                                }
                            }
                            @media only screen and (min-width: $bp970 + 1) {
                                 .iconosubmenu{
                                     position: absolute;
                                     top:0;
                                     right: 10px;
                                     
                                    span.icono{
                                        background: url('<%= asset_path 'ul_submenu.png' %>')  no-repeat;
                                        display: block;
                                        float: right;
                                        width: 15px;
                                        height: 18px;
                                        margin: 11px auto 0;
                                        @include transicion-media;
                                        }
                                    }
                                    &.active{
                                        & > .iconosubmenu span.icono{
                                            transform: rotate(90deg) ;
                                            -webkit-transform: rotate(90deg) ;
                                            -moz-transform: rotate(90deg) ;
                                            -o-transform: rotate(90deg) ;
                                            -ms-transform: rotate(90deg) ;
                                        }
                                    }
                            }
                            
                            &.items-submenu{
                                & > a:after{
                                    width: 0;
                                    height: 0;
                                    border-style: none;
                                    border-width: 0;
                                    border-color: transparent;
                                    content: url('<%= asset_path 'ul_submenu.png' %>');
                                    display: inline-block;
                                    vertical-align: middle;
                                    margin-left: 7px;
                                    line-height: 1;
                                    margin-top: -3px;
                                    float: right;
                                    margin-right: 13px;
                                }
                            }
                        }
                        
                    }
                    
                    .level2{
                        position: absolute;
                        display: none;
                        left: $w-full;
                        top: 0;
                        width: 250px;
                        background: $c-gris-menu;
                        z-index: 2;
                        
                        li{
                            display: block;
                            width: $w-full;
                            margin-left: 0px;
                            
                            a{
                                text-align: left;
                                color: $c-blanco;
                                font-size: $f-size-s;
                                font-weight: 500;
                                display: block;
                                color: $c-blanco;
                                
                                &:hover{
                                    color: $c-blanco;
                                    background: $c-gris-menu-hover;
                                }
                            }
                        }
                    }
                
                }
                
                @media only screen and (max-width: $bp1400) {
                    nav{
                        padding-right: 10px;;
                    }
                }
                
                .carrito{
                    width: 56px;
                    height: 50px;
                    @include iconsprite;
                    background-position: 0px 2px;
                    position: relative;
                    display: inline-block;
                    vertical-align: middle;
                    margin-left: -4px;
                    cursor: pointer;

                    .cantidad{
                        position: absolute;
                        width: 20px;
                        height: 20px;
                        @include border-radius(50%);
                        text-align: center;
                        font-size: $f-size-xs;
                        color: $c-blanco;
                        background: $c-gris-oscuro;
                        line-height: 20px;
                        right: -10px;
                        top: -6px;
                    }
                }
                
            }
            @media only screen and (max-width: $bp1250) {
                .navegacion{
                    margin-top: 2.6%;
                    width: 91%;
                }
            }
            @media only screen and (max-width: $bp1050) {
                .navegacion{
                    margin-top: 2.2%;
                    width: 86%;
                }
            }
            &:after{
                display: block;
                clear: both;
                content: '';
            }
        }
        @media only screen and (max-width: $bp1250) {
           .info-head{
                padding: 15px 18px 15px 10px;
            }
        }
        @media only screen and (max-width: $bp1050) {
           .info-head{
                padding: 10px 18px 10px 10px;
            }
        }
    }
}

/* header mobile */

@media only screen and (max-width: $bp970) {
    header{
        width: $w-full;
        padding: 0;
        position: relative;
        top: 0;
        z-index: 10;
        
        .content-header .info-top{
            .socialmedia{
                display: none;
            }
            .links-top ul li{
                margin-top: 7px;
            }
        }
        .content-header .info-head .navegacion{
            width: 120px;
            margin-top: 14px;
            
             .menu-mobile{
                display: inline-block;
                width: 40px;
                height: 40px;
                vertical-align: middle;
                margin-right: 15px;
                 cursor: pointer;
                 @include iconsprite;
                 background-position: 0 -435px;
                 
                 &:hover,
                 &.activo{
                     background-position: -50px -435px;
                 }

            }
            nav{
                position: absolute;
                top: 100%;
                right: 0;
                width: 100%;
                padding: 0 15px;
                background: $c-gris-menu-mobile;
                
                .level0{
                    display: none;
                    width: 100%;
                    li{
                        width: 100%;
                        display: block;
                        margin-left: 0;
                        float: left;
                        border-bottom: 1px dotted $c-gris-oscuro2;
                        
                        a{
                            height: 40px;
                            line-height: 2;
                            font-size: $f-size-l;
                            text-align: left;
                            width: 100%;
                        } 
                        &:last-child{
                            border-bottom: 0;
                        }
                    }
                }
                .level1, .level2{
                        position: relative;
                        display: none;
                        float: left;
                        top: $w-full;
                        width: 100%;
                        z-index: 2;
                        left: 0;
                    li a{
                        line-height: 1;
                    }
                }
                .level0  li{
                    &.li_submenu{
                       & > a{
                            float: left;
                            width: 85%;

                        &:after{
                            display: none;
                        }
                    }
                        .iconosubmenu{
                            width: 15%;
                            float: right;
                            background: $c-gris-submenu-icon-mobile;
                            border-left: 1px solid $c-gris-menu-hover;
                            height: 40px;
                            display: block;

                        span.icono{
                            background: url('<%= asset_path 'ul_submenu.png' %>')  no-repeat;
                            display: block;
                            width: 15px;
                            height: 18px;
                            margin: 11px auto 0;
                            @include transicion-media;
                            }
                        }
                        &.active{
                            & > .iconosubmenu span.icono{
                                transform: rotate(90deg) ;
                                -webkit-transform: rotate(90deg) ;
                                -moz-transform: rotate(90deg) ;
                                -o-transform: rotate(90deg) ;
                                -ms-transform: rotate(90deg) ;
                            }
                        }
                    }
                }
                .level1  li.li_submenu .iconosubmenu{
                    background: $c-verde-oscuro;
                    border-left: 1px solid $c-verde-claro;
                }
            }
        }
    }
}

@media only screen and (max-width: $bp760) {
    header{
        .content-header .info-top{
            .links-top{
                display: none;
            }
            .top-right{
                width: $w-full;
                position: relative;
                padding: 0 10px;
                
                .usuarios{
                    float: left;
                    margin-left: 0;
                }
                .menu-top{
                    display: none;
                }
                .buscador{
                    .busca_form{
                        input[type="search"]{
                            width: 210px;
                        }
                    }
                }
            }
        }
    }
}

@media only screen and (max-width: $bp479) {
    header{
        .content-header .info-top{
         
            .top-right{
                .buscador{
                    .buscar_mobile{
                        display: block;
                        width: 40px;
                        height: 40px;
                        background: $c-gris-menu;
                        cursor: pointer;
                        @include iconsprite;
                        float: right;
                        background-position: 8px -258px;
                        
                        &:hover, &.activo{
                            background-position: -42px -258px;
                        }
                    }
                        .busca_form{
                            position: absolute;
                            top: 100% ;
                            width: 100%;
                            background: $c-gris-claro-carrito;
                            left: 0;
                            padding: 10px;
                            z-index: 3;
                            display: none;
                        
                        input[type="search"]{
                            width: 90%;
                        }
                        input[type="submit"]{
                            width: 10%;
                            background-position: 6px -259px;
                            background-color: $c-negro;
                            
                            &:hover{
                                background-position: -44px -259px;
                            }
                        }
                         span.borrar{
                            right: 14%;
                            top: 22px;
                        }
                    }
                }
            }
            
        }
    }
}

@media only screen and (max-width: 400px) {
    header  .content-header .info-top .top-right .buscador .busca_form{
        input[type="search"]{
            width: 89%;
        }
        input[type="submit"]{
            width: 11%;
            background-position: 6px -259px;
        }
        span.borrar{
            right: 16%;
            top: 22px;
        }
    }
}
@media only screen and (max-width: 350px) {
    header  .content-header .info-top .top-right .buscador .busca_form{
        input[type="search"]{
            width: 87%;
        }
        input[type="submit"]{
            width: 13%;
            background-position: 6px -259px;
        }
    }
}
    
    
    